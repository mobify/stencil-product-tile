<article class="c-product-tile {class}">
    <a href="{href}" class="c-product-tile__inner">

        <img class="c-product-tile__image" src="{photo.src}" alt="{photo.alt}" />

        {@c-rating-scale ratingTotal=70 /}

        <h2 class="c-product-tile__title">{title}</h2>

        <div class="c-product-tile__prices">
            {?salePrice}
                <span class="c-product-tile__price {?salePrice}c--sale{/salePrice}">
                    {salePrice}
                </span>
            {/salePrice}

            <span class="c-product-tile__price {?salePrice}c--was{/salePrice}">
                {regularPrice}
            </span>
        </div>

    </a>
</article>
